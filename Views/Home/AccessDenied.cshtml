@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-ban me-2"></i>Acceso Denegado
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                    </div>
                    
                    <h5>No tienes permisos para acceder a esta página</h5>
                    <p class="text-muted">
                        Esta funcionalidad está restringida a usuarios con roles específicos.
                    </p>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="alert alert-info">
                            <strong>Usuario actual:</strong> @User.Identity.Name<br>
                            <strong>Roles:</strong> 
                            @if (User.IsInRole("Coordinador"))
                            {
                                <span class="badge bg-success">Coordinador</span>
                            }
                            @if (User.IsInRole("Estudiante"))
                            {
                                <span class="badge bg-primary">Estudiante</span>
                            }
                            @if (!User.IsInRole("Coordinador") && !User.IsInRole("Estudiante"))
                            {
                                <span class="badge bg-secondary">Sin rol asignado</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <strong>No has iniciado sesión.</strong> Inicia sesión para acceder a esta funcionalidad.
                        </div>
                    }

                    <div class="mt-4">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                                <i class="fas fa-home me-1"></i>Ir al Inicio
                            </a>
                            <a href="@Url.Action("Index", "Cursos")" class="btn btn-outline-primary">
                                <i class="fas fa-book me-1"></i>Ver Cursos
                            </a>
                        }
                        else
                        {
                            <a href="/SimpleLogin" class="btn btn-primary me-2">
                                <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesión
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-home me-1"></i>Ir al Inicio
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Información para desarrolladores (solo en desarrollo) -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Información de Debug</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>Credenciales de prueba:</strong><br>
                        👑 Coordinador: admin@test.com / 123456<br>
                        👤 Estudiante: student@test.com / 123456
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>