@{
    ViewData["Title"] = "Test de Login Simple";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-vial me-2"></i>Test de Login Simple</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.Success))
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check me-2"></i>
                            @ViewBag.Success
                        </div>
                    }

                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   placeholder="admin@gmail.com" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   placeholder="admin123" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Probar Login
                        </button>
                    </form>

                    <hr>
                    
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">
                                <strong>Coordinador:</strong><br>
                                admin@gmail.com<br>
                                admin123
                            </small>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">
                                <strong>Test:</strong><br>
                                test@test.com<br>
                                1234
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-outline-primary btn-sm w-100" 
                                    onclick="fillCredentials('admin@gmail.com', 'admin123')">
                                Usar Coordinador
                            </button>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-outline-success btn-sm w-100" 
                                    onclick="fillCredentials('test@test.com', '1234')">
                                Usar Test
                            </button>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="/Diagnostico" class="btn btn-info btn-sm">Ver Diagnóstico</a>
                        <a href="/Identity/Account/Login" class="btn btn-secondary btn-sm">Login Original</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function fillCredentials(email, password) {
    document.getElementById('email').value = email;
    document.getElementById('password').value = password;
}
</script>