@model examen_parcial.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">
        <i class="fas fa-edit me-2 text-primary"></i>Editar Curso
    </h1>
    <div>
        <a href="@Url.Action("Matriculas", new { cursoId = Model.Id })" class="btn btn-outline-info">
            <i class="fas fa-users me-2"></i>Ver Matrículas
        </a>
        <a href="@Url.Action("Cursos")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Información del Curso</h5>
                <span class="badge bg-@(Model.Activo ? "success" : "secondary")">
                    @(Model.Activo ? "Activo" : "Inactivo")
                </span>
            </div>
            <div class="card-body">
                <form asp-action="EditarCurso" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Codigo" class="form-label">Código del Curso *</label>
                            <input asp-for="Codigo" class="form-control" required />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Creditos" class="form-label">Créditos *</label>
                            <input asp-for="Creditos" type="number" min="1" max="10" class="form-control" required />
                            <span asp-validation-for="Creditos" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Curso *</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="HorarioInicio" class="form-label">Hora de Inicio *</label>
                            <input asp-for="HorarioInicio" type="time" class="form-control" required />
                            <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="HorarioFin" class="form-label">Hora de Fin *</label>
                            <input asp-for="HorarioFin" type="time" class="form-control" required />
                            <span asp-validation-for="HorarioFin" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="CupoMaximo" class="form-label">Cupo Máximo *</label>
                            <input asp-for="CupoMaximo" type="number" min="1" max="500" class="form-control" required />
                            <span asp-validation-for="CupoMaximo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">
                                Curso activo (disponible para matrículas)
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Cursos")" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Estadísticas del Curso
                </h6>
            </div>
            <div class="card-body">
                @{
                    var confirmadas = Model.Matriculas.Count(m => m.Estado == examen_parcial.Models.EstadoMatricula.Confirmada);
                    var pendientes = Model.Matriculas.Count(m => m.Estado == examen_parcial.Models.EstadoMatricula.Pendiente);
                    var canceladas = Model.Matriculas.Count(m => m.Estado == examen_parcial.Models.EstadoMatricula.Cancelada);
                    var disponibles = Model.CupoMaximo - confirmadas;
                }
                
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-success mb-0">@confirmadas</h4>
                            <small class="text-muted">Confirmadas</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-warning mb-0">@pendientes</h4>
                        <small class="text-muted">Pendientes</small>
                    </div>
                </div>
                
                <hr>
                
                <div class="d-flex justify-content-between">
                    <span>Cupos disponibles:</span>
                    <strong class="text-@(disponibles > 0 ? "success" : "danger")">@disponibles</strong>
                </div>
                
                @if (canceladas > 0)
                {
                    <div class="d-flex justify-content-between">
                        <span>Canceladas:</span>
                        <span class="text-muted">@canceladas</span>
                    </div>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Importante
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-3">
                    <small>
                        <strong>Cambiar el cupo máximo:</strong> Si reduces el cupo por debajo del número de estudiantes confirmados, 
                        deberás gestionar las matrículas manualmente.
                    </small>
                </div>
                
                <div class="alert alert-info mb-0">
                    <small>
                        <strong>Desactivar curso:</strong> Los estudiantes ya matriculados mantendrán su estado, 
                        pero no se permitirán nuevas matrículas.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Validación personalizada del horario
        document.querySelector('form').addEventListener('submit', function(e) {
            var inicio = document.querySelector('input[name="HorarioInicio"]').value;
            var fin = document.querySelector('input[name="HorarioFin"]').value;
            
            if (inicio && fin && inicio >= fin) {
                e.preventDefault();
                alert('La hora de fin debe ser posterior a la hora de inicio.');
                return false;
            }
            
            // Validación del cupo máximo vs matrículas confirmadas
            var cupoMaximo = parseInt(document.querySelector('input[name="CupoMaximo"]').value);
            var confirmadas = @confirmadas;
            
            if (cupoMaximo < confirmadas) {
                if (!confirm(`El cupo máximo (${cupoMaximo}) es menor que las matrículas confirmadas (${confirmadas}). ¿Continuar?`)) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>
}