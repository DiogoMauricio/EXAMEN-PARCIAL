@{
    ViewData["Title"] = "Diagn√≥stico del Sistema";
    var diagnostico = ViewBag.Diagnostico;
}

<div class="container mt-4">
    <h1>üîß Diagn√≥stico del Sistema</h1>
    
    <!-- Estado de la Base de Datos -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-database me-2"></i>Base de Datos</h5>
                </div>
                <div class="card-body">
                    <p><strong>Conexi√≥n:</strong> 
                        @if (diagnostico.DatabaseExists)
                        {
                            <span class="badge bg-success">‚úÖ Conectada</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">‚ùå Error</span>
                        }
                    </p>
                    <p><strong>Usuarios:</strong> <span class="badge bg-primary">@diagnostico.UsersCount</span></p>
                    <p><strong>Roles:</strong> <span class="badge bg-secondary">@diagnostico.RolesCount</span></p>
                    <p><strong>Cursos:</strong> <span class="badge bg-info">@diagnostico.CursosCount</span></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-users me-2"></i>Usuarios Espec√≠ficos</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>admin@gmail.com:</strong>
                        @if (ViewBag.AdminExists)
                        {
                            <span class="badge bg-success">‚úÖ Existe</span>
                            @if (ViewBag.AdminPasswordValid)
                            {
                                <span class="badge bg-success">üîë Password OK</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">‚ùå Password Fail</span>
                            }
                            <br><small>Roles: @string.Join(", ", ViewBag.AdminRoles)</small>
                        }
                        else
                        {
                            <span class="badge bg-danger">‚ùå No existe</span>
                        }
                    </div>
                    
                    <div>
                        <strong>test@test.com:</strong>
                        @if (ViewBag.TestExists)
                        {
                            <span class="badge bg-success">‚úÖ Existe</span>
                            @if (ViewBag.TestPasswordValid)
                            {
                                <span class="badge bg-success">üîë Password OK</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">‚ùå Password Fail</span>
                            }
                            <br><small>Roles: @string.Join(", ", ViewBag.TestRoles)</small>
                        }
                        else
                        {
                            <span class="badge bg-danger">‚ùå No existe</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Todos los Usuarios -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5><i class="fas fa-list me-2"></i>Todos los Usuarios en la Base de Datos</h5>
        </div>
        <div class="card-body">
            @if (diagnostico.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>UserName</th>
                                <th>Email Confirmado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in diagnostico.Users)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">‚úÖ S√≠</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">‚ö†Ô∏è No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    No se encontraron usuarios en la base de datos.
                </div>
            }
        </div>
    </div>

    <!-- Test Manual de Login -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5><i class="fas fa-key me-2"></i>Test Manual de Credenciales</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Probar Coordinador:</h6>
                    <button class="btn btn-outline-primary" onclick="testLogin('admin@gmail.com', 'Admin2024!')">
                        Test admin@gmail.com
                    </button>
                </div>
                <div class="col-md-6">
                    <h6>Probar Usuario Simple:</h6>
                    <button class="btn btn-outline-success" onclick="testLogin('test@test.com', '1234')">
                        Test test@test.com
                    </button>
                </div>
            </div>
            <div id="testResult" class="mt-3"></div>
        </div>
    </div>

    <!-- Roles -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5><i class="fas fa-shield-alt me-2"></i>Roles del Sistema</h5>
        </div>
        <div class="card-body">
            @if (diagnostico.Roles.Any())
            {
                @foreach (var role in diagnostico.Roles)
                {
                    <span class="badge bg-info me-2 mb-2">@role</span>
                }
            }
            else
            {
                <span class="text-muted">No hay roles configurados</span>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/Identity/Account/Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Ir a Login
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-home me-2"></i>Volver al Inicio
        </a>
    </div>
</div>

<script>
function testLogin(email, password) {
    fetch('/Diagnostico/TestLogin?email=' + encodeURIComponent(email) + '&password=' + encodeURIComponent(password))
        .then(response => response.json())
        .then(data => {
            const resultDiv = document.getElementById('testResult');
            if (data.success) {
                resultDiv.innerHTML = `<div class="alert alert-success">
                    <i class="fas fa-check me-2"></i>
                    ‚úÖ Credenciales v√°lidas para: ${data.user}
                </div>`;
            } else {
                resultDiv.innerHTML = `<div class="alert alert-danger">
                    <i class="fas fa-times me-2"></i>
                    ‚ùå ${data.message}
                </div>`;
            }
        })
        .catch(error => {
            document.getElementById('testResult').innerHTML = `<div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Error: ${error}
            </div>`;
        });
}
</script>